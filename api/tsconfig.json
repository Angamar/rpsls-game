{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/scripts/**/*",
        "src/schemas/**/*",
        "src/controllers/**/*",
        "src/routes/**/*",
        "src/app.ts"
    ]
}