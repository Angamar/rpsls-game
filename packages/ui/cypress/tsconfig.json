{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "dom"],
    "types": ["cypress", "node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "isolatedModules": false
  },
  "include": ["./**/*"],
  "exclude": ["../src/**/*.test.*", "../src/**/*.spec.*", "../node_modules"]
}
